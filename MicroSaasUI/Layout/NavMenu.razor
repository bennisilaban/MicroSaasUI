<div class="navmenu">
    <input type="checkbox" title="Menu expand/collapse toggle" id="navmenu-toggle" class="navmenu-icon" />
    <label for="navmenu-toggle" class="navmenu-icon"><FluentIcon Value="@(new Icons.Regular.Size20.Navigation())" Color="Color.Fill" /></label>
    <nav class="sitenav" aria-labelledby="main-menu">
        <FluentNavMenu Id="main-menu" Width="250" Collapsible="true" Title="Navigation menu" @bind-Expanded="expanded" CustomToggle="true">
             <FluentNavLink Href="/" Match="NavLinkMatch.All" Icon="@(new Icons.Regular.Size20.Home())" IconColor="Color.Accent">Home</FluentNavLink>
             <FluentNavLink Href="counter" Icon="@(new Icons.Regular.Size20.NumberSymbolSquare())" IconColor="Color.Accent">Counter</FluentNavLink>
             <FluentNavLink Href="weather" Icon="@(new Icons.Regular.Size20.WeatherPartlyCloudyDay())" IconColor="Color.Accent">Weather</FluentNavLink>
             <FluentNavGroup Title="Organization" Tooltip="Organization tooltip" Icon="@(new Icons.Regular.Size24.OrganizationHorizontal())" >
                <FluentNavLink Href="Organization/Company" Icon="@(new Icons.Regular.Size20.Organization())" IconColor="Color.Accent">Company</FluentNavLink>
                <FluentNavLink Href="Organization/Department" Icon="@(new Icons.Regular.Size20.Organization())" IconColor="Color.Accent">Department</FluentNavLink>
            </FluentNavGroup>
            <FluentNavGroup Title="Employee" Tooltip="Organization tooltip" Icon="@(new Icons.Regular.Size24.OrganizationHorizontal())">
                <FluentNavLink Href="Employee/Employees" Icon="@(new Icons.Regular.Size20.People())" IconColor="Color.Accent">Employee</FluentNavLink>
                <FluentNavLink Href="Employee/Family" Icon="@(new Icons.Regular.Size20.People())" IconColor="Color.Accent">Family</FluentNavLink>
            </FluentNavGroup>
        </FluentNavMenu>
    </nav>
</div>

@code {
    private bool expanded = true;
    private bool EnableCollapsedChildNavigation = true;
}
