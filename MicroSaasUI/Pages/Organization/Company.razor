    <PropertyColumn Property="@(p => p.Name)" Sortable="true" />
    <PropertyColumn Property="@(p => p.Phone)" Sortable="true" />
    <PropertyColumn Property="@(p => p.Address)" Sortable="false" />
</FluentDataGrid>

